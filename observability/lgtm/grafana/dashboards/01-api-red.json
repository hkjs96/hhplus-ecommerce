{
  "uid": "lgtm-api-red",
  "title": "01 - API RED (Overview)",
  "tags": ["lgtm", "observability", "red"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "time": { "from": "now-15m", "to": "now" },
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": { "type": "grafana", "uid": "-- Grafana --" },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "Rate (RPS)",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(http_server_requests_seconds_count[1m]))"
        }
      ]
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "Error Rate (5xx)",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 0 },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "links": [
            {
              "title": "Drilldown (route)",
              "url": "/d/lgtm-route-drilldown/02-route-drilldown?var-route=${__field.labels.uri}&from=${__from}&to=${__to}",
              "targetBlank": true
            }
          ]
        },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(http_server_requests_seconds_count{status=~\"5..\"}[5m])) / sum(rate(http_server_requests_seconds_count[5m]))"
        }
      ]
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Duration p95 (Top 10 by route)",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 0 },
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "links": [
            {
              "title": "Drilldown (route)",
              "url": "/d/lgtm-route-drilldown/02-route-drilldown?var-route=${__field.labels.uri}&from=${__from}&to=${__to}",
              "targetBlank": true
            }
          ]
        },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "topk(10, histogram_quantile(0.95, sum(rate(http_server_requests_seconds_bucket[5m])) by (le, uri)))"
        }
      ]
    },
    {
      "id": 4,
      "type": "stat",
      "title": "Error Rate by server (Service Graph, 5m)",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 6, "w": 24, "x": 0, "y": 8 },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.01 },
              { "color": "red", "value": 0.05 }
            ]
          }
        },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(traces_service_graph_request_total{failed=\"true\"}[5m])) by (server) / sum(rate(traces_service_graph_request_total[5m])) by (server)"
        }
      ]
    }
  ]
}
